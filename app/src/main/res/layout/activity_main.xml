<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_main"
    android:paddingHorizontal="22dp"
    android:paddingTop="19dp"
    android:paddingBottom="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/element_text"
        android:paddingVertical="11dp"
        android:padding="16dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/this_is_my_kindergarten"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="186"
            android:orientation="vertical"
            android:layout_marginEnd="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="260"
                android:src="@color/white_transparent"
                tools:ignore="NestedWeights"
                android:layout_marginBottom="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resume"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="74"
                android:textSize="14sp"
                android:textColor="@color/purple_text_main"
                android:text="@string/what_my_paws_can"
                android:fontFamily="@font/inika_bold"
                android:background="@drawable/element_button"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="118"
            android:orientation="vertical"
            android:layout_marginStart="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="84"
                android:orientation="vertical"
                android:background="@drawable/element_text_secondary"
                tools:ignore="NestedWeights"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/oho_ho"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_normal"
                    android:fontFamily="@font/irish_grover" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_name_is"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_small"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/malika"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_normal"
                    android:fontFamily="@font/irish_grover" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="252"
                android:orientation="horizontal">

<!--                если вы хотели посмотреть, как я гениально сделала поворот текста - -->
<!--                я не справилась ТТоТТ я неудачник... -->
<!--                если у вас получится, напишите мне  -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/somnitelno"
                    android:background="@drawable/element_text"
                    android:paddingVertical="5dp"
                    android:layout_marginEnd="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp">
                    
                    <ImageView
                        android:id="@+id/laboratory"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/element_border"
                        android:layout_marginBottom="9dp"/>

                    <ImageView
                        android:id="@+id/settings"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/element_border"
                        android:layout_marginBottom="9dp"/>

                    <ImageView
                        android:id="@+id/reserve"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/element_border"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


<!--    messages section-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/element_text"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/malika"
            android:fontFamily="@font/inika_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_thoughts"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/element_text"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/you"
            android:fontFamily="@font/inika_bold"
            android:textAlignment="textEnd"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_thoughts"
            android:textAlignment="textEnd"/>

    </LinearLayout>

<!--    polzunok-->
    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:thumbColor="@color/white"
        app:thumbWidth="7dp"
        app:trackColor="@color/white_transparent_50"
        app:trackColorActive="@color/pink_transparent"
        app:labelBehavior="gone"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/sliderPercents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textSize="@dimen/text_size_normal"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/percentDescribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_opinion"
        android:textAlignment="center"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>